{
	"name": "express-typescript-boilerplate",
	"version": "1.0.14",
	"description": "An Express boilerplate backend",
	"author": "Edwin Hernandez",
	"repository": "edwinhern/express-typescript-2024",
	"license": "MIT",
	"main": "index.ts",
	"engines": {
		"node": "20.x"
	},
	"private": true,
	"scripts": {
		"postinstall": "prisma generate",
		"heroku-postbuild": "npm run build && prisma generate",
		"build": "prisma generate && tsc && tsup",
		"start:dev": "node --import=tsx --watch src/index.ts",
		"start:prod": "node dist/index.js",
		"start": "node dist/index.js",
		"lint": "biome lint --fix",
		"format": "biome format --write",
		"check": "pnpm lint && pnpm format && pnpm build && pnpm test",
		"seed": "tsx prisma/seeders/main.ts"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.0",
		"@aws-sdk/client-s3": "^3.815.0",
		"@prisma/client": "^6.7.0",
		"@types/node": "^22.15.3",
		"@types/object-path": "^0.11.4",
		"bcrypt": "^6.0.0",
		"bwip-js": "^4.6.0",
		"cors": "2.8.5",
		"date-fns-tz": "^3.2.0",
		"dotenv": "16.5.0",
		"express": "5.1.0",
		"express-formidable": "^1.2.0",
		"express-rate-limit": "7.5.0",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"jsonwebtoken": "^9.0.2",
		"lodash.chunk": "^4.2.0",
		"module-alias": "^2.2.3",
		"multer": "^1.4.5-lts.2",
		"object-path": "^0.11.8",
		"pino": "9.6.0",
		"pino-http": "10.4.0",
		"prisma": "^6.7.0",
		"swagger-ui-express": "5.0.1",
		"ts-node": "^10.9.2",
		"url": "^0.11.4",
		"uuid": "^11.1.0",
		"xlsx": "^0.18.5",
		"zod": "3.24.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "2.8.17",
		"@types/express": "5.0.1",
		"@types/express-formidable": "^1.2.3",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/lodash.chunk": "^4.2.9",
		"@types/module-alias": "^2.0.4",
		"@types/multer": "^1.4.12",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"pino-pretty": "13.0.0",
		"prettier": "^3.5.3",
		"supertest": "7.1.0",
		"tsup": "8.4.0",
		"tsx": "4.19.3",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.9.0",
	"_moduleAliases": {
		"@/*": ["./src/*"]
	}
}
